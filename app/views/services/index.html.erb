<% content_for :head do %>
  <%= stylesheet_link_tag "services" %>
<% end %>

<div class="services-page">
  <div class="page-header">
    <div class="header-left">
      <%= link_to chat_path, class: "btn-back" do %>
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Volver al chat
      <% end %>
      <h1>⚡ Acciones Rápidas</h1>
    </div>
  </div>

  <div class="services-content">
    <div class="section">
      <h2>Agregar Nuevo Servicio</h2>
      <%= render "services/form" %>
    </div>

    <div class="section">
      <h2>Servicios Activos (<%= @services.count %>)</h2>
      <div id="services-list" class="services-grid">
        <% @services.each do |service| %>
          <%= render "services/service_item", service: service %>
        <% end %>
        
        <% if @services.empty? %>
          <div class="empty-state">
            <p>No hay servicios configurados</p>
            <span class="hint">Agrega servicios frecuentes para registrarlos más rápido</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
