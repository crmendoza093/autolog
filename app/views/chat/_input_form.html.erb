<div id="chat-input-form">
<%= form_with url: chat_message_path, 
    method: :post,
    class: "chat-input-wrapper",
    id: "chat-form" do |f| %>
    <div class="chat-input-container">
      <%= f.text_area :message, 
        rows: 1,
        placeholder: "Ej: Lavado motor $50000 ABC123 Juan",
        class: "chat-input",
        id: "message-input",
        autofocus: true,
        autocomplete: "off" %>
      <%= f.submit "âž¤", 
        class: "btn-send",
        id: "submit-btn" %>
    </div>
    <div class="ghost-hint" id="ghost-hint">
      <span class="ghost-label">Servicio:</span> <span id="ghost-service">-</span> | 
      <span class="ghost-label">Precio:</span> <span id="ghost-price">-</span> | 
      <span class="ghost-label">Placa:</span> <span id="ghost-plate">-</span> | 
      <span class="ghost-label">Cliente:</span> <span id="ghost-client">-</span>
    </div>
  <% end %>
  <div class="autocomplete-dropdown" id="client-autocomplete" style="display: none;">
    <!-- Client suggestions will be inserted here -->
  </div>
</div>
